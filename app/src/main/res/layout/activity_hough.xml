<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.zucc.androocv.HoughActivity">

    <ImageView
        android:id="@+id/image_preview"
        android:layout_width="250dp"
        android:layout_height="300dp"
        />
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="0dp">
        <Button
            android:id="@+id/btn_get"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Load Image"
            />
        <Button
            android:id="@+id/btn_reset"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Reset Image"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="0dp">
        <Button
            android:id="@+id/btn_line"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Line Detection"
            />
        <Button
            android:id="@+id/btn_linep"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Probabilistic " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="0dp">
        <Button
            android:id="@+id/btn_circle"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Circle Detection"
            />
        <Button
            android:id="@+id/btn_ellipse"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Ellipse Detection" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="0dp">
        <Button
            android:id="@+id/btn_labelling"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Component Labelling"/>
    </LinearLayout>

</LinearLayout>
